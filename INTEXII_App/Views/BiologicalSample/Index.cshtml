@model IEnumerable<INTEXII_App.Models.BiologicalSample>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SampleRack)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SampleBag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreviouslySampled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Initials)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Burial)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SampleRack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SampleBag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreviouslySampled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Initials)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Burial.BurialId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BiologicalSampleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BiologicalSampleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BiologicalSampleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
