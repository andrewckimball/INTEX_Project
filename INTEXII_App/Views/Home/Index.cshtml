@{
    ViewData["Title"] = "Home Page";
}

<divHead>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Grayscale - Start Bootstrap Theme</title>
    <link rel="icon" type="image/x-icon" href="~/HomePage/assets/img/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/HomePage/css/styles.css" rel="stylesheet" />
</divHead>

<divBody>
    <style>
        .container {
        }
    </style>
    <!-- Masthead-->
    <header class="masthead">
        <div class="container d-flex h-100 align-items-center">
            <div class="mx-auto text-center">
                <h1 class="mx-auto my-0 text-uppercase">Fag El-Gamous</h1>
                <h2 class="text-white-50 mx-auto mt-2 mb-5">Access to a database with thousands of years of history.</h2>
                <a class="btn btn-secondary js-scroll-trigger" asp-controller="Burial" asp-action="Index">View the Data</a>
            </div>
        </div>
    </header>
    <!-- About-->
    <section class="about-section text-center" id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2 class="text-white mb-4">Info on the Cemetary</h2>
                    <p class="text-white-50">
                        Fag el-Gamous (which means Way of the Water Buffalo) is a large and important cemetery in Egypt that has been under archeological
                        investigation (primarily by BYU researchers) for over 25 years. The excavation has garnered international attention because of the
                        interesting insights gained by studying the Fag el-Gamous mummies.
                    </p>
                </div>
            </div>
            <img class="img-fluid" src="assets/img/ipad.png" alt="" />
        </div>
    </section>
    <!-- Projects-->
    <section class="projects-section bg-light" id="projects">
        <div class="container">
            <!-- Featured Project Row-->
            <div class="row align-items-center no-gutters mb-4 mb-lg-5">
                <div class="col-xl-1"></div>
                <div class="col-xl-8 col-lg-7"><img class="img-fluid mb-3 mb-lg-0" src="~/HomePage/assets/img/dunes.jpg" alt="" style="width: 800px;" /></div>
                <div class="col-xl-2 col-lg-5">
                    <div class="featured-text text-center text-lg-left">
                        <h4>Explore</h4>
                        <p class="text-black-50 mb-0">Thousands of records are open to be explored on this website! Checkout the database to see what you can discover.</p>
                    </div>
                </div>
            </div>
            <!-- Project One Row-->
            <div class="row justify-content-center no-gutters mb-5 mb-lg-0">
                <div class="col-lg-6"><img class="img-fluid" src="~/HomePage/assets/img/monument.jpg" alt="" /></div>
                <div class="col-lg-6">
                    <div class="bg-black text-center h-100 project">
                        <div class="d-flex h-100">
                            <div class="project-text w-100 my-auto text-center text-lg-left">
                                <h4 class="text-white">A Rich History</h4>
                                <p class="mb-0 text-white-50">Over the years that the school has been excavating, BYU has uncovered mummies and artifacts that date back thousands of years.</p>
                                <hr class="d-none d-lg-block mb-0 ml-0" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Project Two Row-->
            <div class="row justify-content-center no-gutters">
                <div class="col-lg-6"><img class="img-fluid" src="~/HomePage/assets/img/pyramid.jpg" alt="" /></div>
                <div class="col-lg-6 order-lg-first">
                    <div class="bg-black text-center h-100 project">
                        <div class="d-flex h-100">
                            <div class="project-text w-100 my-auto text-center text-lg-right">
                                <h4 class="text-white">Still in Progress</h4>
                                <p class="mb-0 text-white-50">Even though much has been discovered, the excavations are still ongoing! Not to mention, the data accesible here can help researchers across the world.</p>
                                <hr class="d-none d-lg-block mb-0 mr-0" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <style>
        df-messenger {
            --df-messenger-bot-message: #878fac;
            --df-messenger-button-titlebar-color: #000;
            --df-messenger-chat-background-color: #fafafa;
            --df-messenger-font-color: white;
            --df-messenger-send-icon: #878fac;
            --df-messenger-user-message: #147efb;
        }
    </style>
    <script src="https://www.gstatic.com/dialogflow-console/fast/messenger/bootstrap.js?v=1"></script>
    <df-messenger intent="WELCOME"
                  chat-title="ExcavationBot"
                  agent-id="1fe45ae9-0eb8-41dd-a6b7-d17077b5bc73"
                  language-code="en"
                  chat-icon="https://www.flaticon.com/svg/static/icons/svg/1041/1041916.svg"></df-messenger>



    <!-- Core theme JS-->
    <script src="~/HomePage/js/scripts.js"></script>
</divBody>