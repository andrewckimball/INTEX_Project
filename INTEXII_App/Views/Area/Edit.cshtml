@model INTEXII_App.Models.Area

@{
    ViewData["Title"] = "Edit";
}

<!-- View to edit an area -->
<br />
<h1>Edit Area</h1>

<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AreaId" />
            <div class="form-group">
                <label asp-for="Area1" class="control-label"></label>
                <input asp-for="Area1" class="form-control" />
                <span asp-validation-for="Area1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a class="btn btn-primary"
   style="position: fixed; right: 2rem; bottom: 2rem; z-index: 100;"
   asp-controller="Area"
   asp-action="Index">Back to List</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
